---
import { themeConfig } from '~/.config'

const { title, subtitle } = themeConfig.site
---

<!-- Title Block -->
<div
  class="flex items-center gap-4 px-4 py-2 cursor-pointer duration-300 ease-in-out hover:bg-primary hover:text-background"
>
  <!-- Left Vertical Line -->
  <div class="border-l-2 border-primary self-stretch" style="width: 2px;"></div>

  <!-- Title Text -->
  <a href="/about" class="flex flex-col items-start leading-tight not-underline-hover">
    <span class="text-5 font-extrabold font-header whitespace-nowrap">
      {subtitle}
    </span>
    <span class="text-8 font-extrabold font-header whitespace-nowrap">
      {title}
    </span>
  </a>
</div>
